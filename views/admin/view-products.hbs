<section>
    <div class="container">
        <div class="row mt-3">
            
            <a href="/admin/add-product"><button type="button" class="btn btn-success mb-4" style="float: right;width:200px;">Add Products</button></a>
        </div>
        <table class="table mt-4" id="prTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Movie</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th>Option1</th>
                    <th>Option2</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.name}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px; height:50px" src="/product-images/{{_id}}.jpg"></td>
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                    <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete {{this.Name}}?')">Delete</a></td>
                    
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
    $(document).ready( function () {
    $('#prTable').DataTable();
} );
</script>