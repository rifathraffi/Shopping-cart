<section>
    <div class="container">
        <div class="row text-center mt-5">
            <h1>Create an account</h1>
        </div>
        <div class="row mt-3">
            <div class="col-md-6 m-auto">
                <form action="/signup" method="POST">
                    <div class="form-row">
                        <div class="form-group col-md-10 p-2">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="Name" placeholder="Name">
                        </div>
                        <div class="form-group col-md-10 p-2">
                            <label for="inputEmail4">Email</label>
                            <input type="email" class="form-control" id="inputEmail4" name="Email" placeholder="Email">
                        </div>
                        <div class="form-group col-md-10 p-2">
                            <label for="inputPassword4">Password</label>
                            <input type="password" class="form-control" id="inputPassword4" name="Password" placeholder="Password">
                        </div>
                    </div>
                    <a href="/login" style="text-decoration: none;margin-left:1rem">Already have an account</a>


                    <button type="submit" class="btn btn-primary mt-2" style="float: right;margin-right:6.5rem">Sign
                        in</button>
                </form>
            </div>
        </div>
    </div>
</section>