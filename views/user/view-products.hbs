<section>
    <div class="container">
        <div class="row mt-5">
            {{#each products}}
            <div class="col-md-3 p-3">
                <div class="card" style="width: 16rem;height: 18rem">
                    <img src="/product-images/{{_id}}.png" class="card-img-top" alt="..." style="height: 9rem; width: 16rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <a href="#" class="btn btn-primary">Add to watchlist</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
</section>